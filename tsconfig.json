{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "es2020",
    "moduleResolution": "node",
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/vue-shim.d.ts",
    "src/router/index.ts",
    "import-meta.d.ts"
  ],
  "exclude": ["node_modules"]
}
